<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unitn.disi.lpsmt.happypuppy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- todo REMOVE android:usesCleartextTraffic -->
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <!-- Google Maps Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".Launcher"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.SignIn" />
        <activity android:name=".auth.SignUp" />
        <activity android:name=".HomePage" />
        <activity android:name=".profile.puppy.RegisterPuppy" />
        <activity android:name=".auth.ForgotPassword" />
        <activity android:name=".auth.ActivateProfile" />
        <activity android:name=".ui.fragment.MapsFragment"/>
        <activity android:name=".ui.components.AndroidListViewActivity" />
        <activity android:name=".profile.user.ProfileUser"/>
        <activity android:name=".profile.puppy.ProfilePuppy"/>
        <activity android:name=".profile.user.EditUser"/>
        <activity android:name=".profile.user.tab_info"/>
        <activity android:name=".profile.user.tab_password"/>
        <activity android:name=".profile.user.MyAdapter"/>
    </application>

</manifest>