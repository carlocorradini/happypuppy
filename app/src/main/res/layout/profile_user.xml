<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="@color/colorPrimary">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/profile_user_top_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/profile_user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_logo" />

    </com.google.android.material.navigation.NavigationView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/profile_user_top_navigation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_user_profile_image"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_dog_avatar" />

            <Button
                android:id="@+id/profile_user_button_image"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignEnd="@+id/profile_user_profile_image"
                android:layout_alignBottom="@+id/profile_user_profile_image"
                android:drawableTop="@drawable/ic_add_avatar" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:weightSum="1"
                android:layout_centerHorizontal="true"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/profile_user_card_friends"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_width="wrap_content">
                    <TextView
                        android:id="@+id/profile_user_friends"
                        android:textSize="@dimen/text_size_standard"
                        android:layout_height="wrap_content"
                        android:text="@string/user_friends"
                        android:textAlignment="center"
                        android:layout_width="match_parent" />
                    <TextView
                        android:id="@+id/profile_user_number_friends"
                        android:textSize="@dimen/text_size_standard"
                        android:layout_height="wrap_content"
                        android:text="@string/user_friends_number"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_width="wrap_content">
                    <TextView
                        android:id="@+id/profile_user_puppies"
                        android:layout_height="wrap_content"
                        android:text="@string/user_puppies"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_standard"
                        android:layout_width="match_parent" />

                    <TextView
                        android:id="@+id/profile_user_number_puppies"
                        android:textSize="@dimen/text_size_standard"
                        android:layout_height="wrap_content"
                        android:text="@string/user_friends_number"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_user_buttons_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:weightSum="1">

        <Button
            android:id="@+id/profile_user_button_edit_profile"
            style="@style/Button.Colored.InvertedAccent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/edit_profile"
            android:layout_width="match_parent" />

        <Button
            android:id="@+id/profile_user_button_add_puppy"
            style="@style/Button.Colored.InvertedAccent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="@string/add_puppy"
            android:layout_width="match_parent" />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>