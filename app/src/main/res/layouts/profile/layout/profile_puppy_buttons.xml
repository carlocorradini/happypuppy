<?xml version="1.0" encoding="utf-8"?>
<merge>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profile_puppy_buttons_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <Button
            android:id="@+id/profile_puppy_button_edit_puppy"
            style="@style/Button.Colored.InvertedAccent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/edit_puppy"
            android:layout_width="match_parent" />

        <Button
            android:id="@+id/profile_puppy_button_remove_puppy"
            style="@style/Button.Colored.InvertedAccent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="@string/remove_puppy"
            android:layout_width="match_parent" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profile_puppy_buttons_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <Button
            android:id="@+id/profile_puppy_button_friendship"
            style="@style/Button.Colored.InvertedAccent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/add_friend"
            android:layout_width="match_parent" />

        <Button
            android:id="@+id/profile_puppy_button_view_owner"
            style="@style/Button.Colored.InvertedAccent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="@string/view_owner"
            android:layout_width="match_parent" />
    </LinearLayout>
</merge>