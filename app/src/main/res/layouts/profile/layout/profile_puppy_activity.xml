<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="@color/colorPrimaryDark">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/profile_puppy_top_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/profile_puppy_button_back"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:foreground="@drawable/ic_arrow_back"
            android:foregroundTint="@color/colorSecondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_puppy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="2dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_logo" />

    </com.google.android.material.navigation.NavigationView>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_puppy_top_navigation"
        android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_puppy_profile_image"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp" />

                <Button
                    android:id="@+id/profile_puppy_button_image"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_alignEnd="@+id/profile_puppy_profile_image"
                    android:layout_alignBottom="@+id/profile_puppy_profile_image"
                    android:drawableTop="@drawable/ic_add_avatar" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:weightSum="1"
                    android:layout_centerHorizontal="true"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:id="@+id/profile_puppy_card_friends"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:layout_width="wrap_content">
                        <TextView
                            android:id="@+id/profile_puppy_friends"
                            android:textSize="@dimen/text_size_standard"
                            android:layout_height="wrap_content"
                            android:text="@string/user_friends"
                            android:textAlignment="center"
                            android:layout_width="match_parent" />
                        <TextView
                            android:id="@+id/profile_puppy_number_friends"
                            android:textSize="@dimen/text_size_standard"
                            android:layout_height="wrap_content"
                            android:text="@string/user_friends_number"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_width="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_width="wrap_content">
                        <TextView
                            android:id="@+id/profile_puppy_owner"
                            android:layout_height="wrap_content"
                            android:text="@string/puppy_owner"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_size_standard"
                            android:layout_width="match_parent" />

                        <TextView
                            android:id="@+id/profile_puppy_user_owner"
                            android:textSize="@dimen/text_size_standard"
                            android:layout_height="wrap_content"
                            android:text="@string/user_friends_number"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_width="match_parent" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <include
            layout="@layout/profile_puppy_buttons" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>