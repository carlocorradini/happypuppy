<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:font">@font/comfortaa</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <!-- Logo -->
    <style name="Logo" parent="AppTheme">
        <item name="android:layout_width">@dimen/logo_width</item>
        <item name="android:layout_height">@dimen/logo_height</item>
        <item name="android:src">@drawable/ic_logo</item>
    </style>
    <!-- Logo with Text -->
    <style name="Logo.Text" parent="Logo">
        <item name="android:layout_width">@dimen/logo_text_width</item>
        <item name="android:layout_height">@dimen/logo_text_height</item>
        <item name="android:src">@drawable/ic_logo_text</item>
    </style>

    <!-- Button Colored -->
    <style name="Button.Colored" parent="AppTheme">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Button Colored Inverted -->
    <style name="Button.Colored.Inverted" parent="Button.Colored">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
